{
  "name": "one-base-strive",
  "version": "0.5.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm dev:api\" \"pnpm dev:web\"",
    "dev:cursor": "./scripts/dev.sh",
    "dev:api": "pnpm --filter @one-base/api dev",
    "dev:web": "pnpm --filter @one-base/web dev",
    "build": "pnpm --filter @one-base/shared build && pnpm --filter @one-base/api build && pnpm --filter @one-base/web build",
    "lint": "pnpm --recursive lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "migrate": "pnpm --filter @one-base/api migrate",
    "seed": "pnpm --filter @one-base/api seed"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "concurrently": "^8.2.2",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
